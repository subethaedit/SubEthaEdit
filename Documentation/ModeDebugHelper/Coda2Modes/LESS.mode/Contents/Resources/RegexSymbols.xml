<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE syntax SYSTEM "symbol.dtd">
<symbols>

    <blocks>
        <beginregex>{</beginregex>
        <endregex>}</endregex>
    </blocks>
    
    <!-- CODA - added support for comments after delarations before { -->
    <symbol id="Tags" image="SymbolT">
        <regex>(?&lt;=[\n\r\}]|^)[\t ]*(?:/\*.*\*/)*[ \t]*([\w\*][\w\d\s,\-_\*>:\(\)\+\[\]="~\$\^#\. @%&lt;]*)(?=(\s*\{)|(\s*/\*.*\*/\s*\{))</regex>
        <postprocess>
            <find>[\n\r]</find>
            <replace> </replace>
            <find>[ \t]+</find>
            <replace> </replace>
            <find>/\*.*\*/</find>
            <replace></replace>
            <find>\(.*\)</find>
            <replace></replace>
        </postprocess>
    </symbol>
    
    <symbol id="Classes" image="SymbolC">
        <regex>(?&lt;=[\n\r\}]|^)[\t ]*(?:/\*.*\*/)*[ \t]*([.:][\w\d\s,\-_\*>:\(\)\+\[\]="~\$\^#\. @%&lt;]*)(?=(\s*\{)|(\s*/\*.*\*/\s*\{))</regex>
