	<symbol id="Rules" image="SymbolAt">
        <regex>(?&lt;=[\n\r]|^)[\t ]*(?:/\*.*\*/)*[ \t]*((?i)@(media|import|function|mixin))\s+([\w\d\s,\-_\*>:\(\)\+\[\]="~\$\^#\. @%&lt;]*)(?=(\s*\{)|(\s*/\*.*\*/\s*\{))</regex>
        <postprocess>
            <find>[\n\r]</find>
