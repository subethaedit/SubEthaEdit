            <keywords id="Numbers" color="#00f" useforautocomplete="no">
				<regex>(?&lt;=[^\w\d]|^)(((([0-9]+\.[0-9]*)|(\.[0-9]+))([eE][+\-]?[0-9]+)?[fFlL]?)|((([1-9][0-9]*)|0[0-7]*|(0[xX][0-9a-fA-F]+))(([uU][lL]?)|([lL][uU]?))?))(?=[^\w\d]|$)</regex>
            </keywords>
            <keywords id="Hexadecimal Characters" color="#00f" useforautocomplete="no">
				<regex>(\\x[0-9a-fA-F]{2,4}|\\x\{[0-9a-fA-F]{2,4}\})</regex>
            </keywords>
            
            <state id="q Operators with Slashes" color="#760f15">
                <begin><regex>(?&lt;=[^\w\d\$]|\A)q[qxw]?(?&lt;qclosure&gt;[^\d\w\s\(]).*?[^\\](?=\k&lt;qclosure&gt;)</regex></begin>
                <end><regex>.</regex></end>
            </state>
    
            <state id="q Operators with Parenthesis" color="#760f15">
                <begin><regex>(?&lt;=[^\w\d\$]|\A)q[qxwr]?\(</regex></begin>
                <end><regex>[^\\]\)</regex></end>
            </state>
    
            <state id="qr Operator with Slashes" color="#760f15">
                <begin><regex>(?&lt;=[^\w\d\$]|\A)qr(?&lt;qrclosure&gt;[^\d\w\s\(]).+?[^\\](?=\k&lt;qrclosure&gt;)</regex></begin>
                <end><regex>.[imosx]*</regex></end>
            </state>
    
            <state id="m Operator with Slashes" color="#760f15">
                <begin><regex>(?&lt;=[^\w\d\$]|\A)m(?&lt;mclosure&gt;[^\d\w\s\(]).*?[^\\](?=\k&lt;mclosure&gt;)</regex></begin>
                <end><regex>.[cgimosx]*</regex></end>
            </state>
    
            <state id="s Operator with Slashes" color="#760f15">
                <begin><regex>(?&lt;=[^\w\d\$]|\A)s(?&lt;sclosure&gt;[^\d\w\s\(])(?:.*?[^\\])?\k&lt;sclosure&gt;(?:.*?[^\\])?(?=\k&lt;sclosure&gt;)</regex></begin>
                <end><regex>.[egimosx]*</regex></end>
            </state>
    
            <state id="s Operator with Parenthesis" color="#760f15">
                <begin><regex>(?&lt;=[^\w\d\$]|\A)(?:tr|y|s)\([^\)]*\)\(</regex></begin>
                <end><regex>\)[egimosx]*</regex></end>
            </state>
    
            <state id="s Operator with Curlies" color="#760f15">
                <begin><regex>(?&lt;=[^\w\d\$]|\A)(?:tr|y|s)\{[^\}]*\}\{</regex></begin>
                <end><regex>\}[egimosx]*</regex></end>
            </state>
    
            <state id="tr, y Operator with Slashes" color="#760f15">
                <begin><regex>(?&lt;=[^\w\d\$]|\A)(?:tr|y)(?&lt;yclosure&gt;[^\d\w\s\(])(?:.*?[^\\])?\k&lt;yclosure&gt;(?:.*?[^\\])?(?=\k&lt;yclosure&gt;)</regex></begin>
                <end><regex>.[cds]*</regex></end>
            </state>
    
            <state id="Backticks" color="#608">
                <begin><regex>(?&lt;!\$|\\)(?:\\\\)*`</regex></begin>
                <end><regex>(((?&lt;!\\)(\\\\)*)|^)`</regex></end>
            </state>
    
            <state id="POD style comments" color="#236E25">
                <begin><regex>^=</regex></begin>
                <end><regex>^=cut[^\n\r]*</regex></end>
            </state>
    
            <state id="Regular Expressions" color="#760f15">
                <begin><regex>(?&lt;=[=])\s*/.*?[^\\](?=/[^\n\r]*;)</regex></begin>
                <end><regex>/[cgimosx]*</regex></end>
            </state>
    
            <state id="Regular Expressions 2" color="#760f15">
                <begin><regex>(?&lt;=[=]\S)\s*/.*?[^\\](?=/[^\n\r]*;)</regex></begin>
                <end><regex>/[cgimosx]*</regex></end>
            </state>
    
            <state id="Regular Expressions 3" color="#760f15">
                <begin><regex>\?[^:]*?[^\\](?=\?[^\n\r]*;)</regex></begin>
                <end><regex>\?</regex></end>
            </state>

            <state id="Regular Expressions 4" color="#760f15">
                <begin><regex>(?&lt;==~) */</regex></begin>
                <end><regex>(?&lt;!\\)/</regex></end>
            </state>
    
            <state id="Singleline Comment" type="comment" color="#236E25" font-style="italic">
                <begin><regex>(?&lt;!\$)#</regex></begin>
                <end><regex>[\n\r]</regex></end>
            </state>
            
            <state id="String with double quotes" type="string" color="#760f15">
                <begin><regex>(?&lt;!\$|\\)(?:\\\\)*"</regex></begin>
                <end><regex>(((?&lt;!\\)(\\\\)*)|^)"</regex></end>
            </state>
    
            <state id="String with single quotes" type="string" color="#760f15">
                <begin><regex>(?&lt;!\$|\\)(?:\\\\)*'</regex></begin>
                <end><regex>(((?&lt;!\\)(\\\\)*)|^)'</regex></end>
            </state>

            <state id="Heredoc" color="#760f15" font-weight="normal" font-style="normal">
                <begin><string>&lt;&lt;(?&lt;heredoc&gt;[A-Za-z][A-Za-z0-9_]*);</string></begin>
                <end><regex>(?#see-insert-start-group:heredoc)</regex></end>
            </state>

        </default>

