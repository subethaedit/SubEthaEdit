<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE syntax SYSTEM "syntax.dtd">
<syntax>

    <head>
        <name>Diff</name> <!-- The definitions title -->
        <charsintokens><![CDATA[_0987654321abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ-+@"]]></charsintokens> 
    </head>

    <states>
    
        <default id="Base" color="#000" background-color="#fff" font-weight="normal" font-style="normal">
        
            <keywords id="Index" color="#8f6d00" inverted-color="#c09100" font-weight="bold" useforautocomplete="no">
                <regex>^(Index: )</regex>
            </keywords>

            <keywords id="+++" color="#2b9d00" font-weight="bold" useforautocomplete="no">
                <regex>^([+](?:[+]{2})?[^\n\r]*)</regex>
            </keywords>
            
            <keywords id="---" color="#a61a1a" font-weight="bold" useforautocomplete="no">
                <regex>^([-](?:[-]{2})?[^\n\r]*)</regex>
            </keywords>

            <keywords id="==================" color="#666" useforautocomplete="no">
                <regex>^([=]{3,})</regex>
            </keywords>

            <keywords id="@@" color="#8f6d00" inverted-color="#c09100" font-weight="bold" useforautocomplete="no">
                <regex>^([@]{2}[^@\n\r]+[@]{2})</regex>
            </keywords>

            <state id="Block" type="block" foldable="yes">
                <begin><regex>^(?:[@]{2}[^@\n\r]+[@]{2})</regex></begin>
                <end><regex>[\r\n](?=(?:[@][@]|Index|$|--- ))</regex></end>
                <import />
            </state>

        </default>

    </states>

</syntax>