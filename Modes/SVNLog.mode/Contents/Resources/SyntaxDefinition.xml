<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE syntax SYSTEM "syntax.dtd">
<syntax>

  <head>
    <name>SVNLog</name> <!-- The definitions title -->
    <charsintokens><![CDATA[_0987654321abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ-+@|"]]></charsintokens> 
  </head>
  <states>
    <default id="Base" color="#000" background-color="#dce9fe" font-weight="normal" font-style="normal">
      <state id="Headline" color="#6e8cbe" font-weight="normal" font-style="normal">
        <begin><regex>r[0-9]+ \|</regex></begin>
        <end><regex>[0-9]+ lines?</regex></end>
        <keywords id="Pipes" color="#000" font-weight="normal" useforautocomplete="no">
            <string>|</string>
        </keywords>
        <keywords id="User" color="#00467c" font-weight="bold" useforautocomplete="no">
          <regex>\| (.+) \| .+ \| .+lines?</regex>
        </keywords>
      </state>
      <keywords id="Index" color="#8f6d00" font-weight="bold" useforautocomplete="no">
          <regex>^(Index: )</regex>
      </keywords>

      <keywords id="Added" color="#2b9d00" useforautocomplete="no">
          <regex>^([ ]{3}A .+)$</regex>
      </keywords>
      
      <keywords id="Modified" color="#bf9b2e" useforautocomplete="no">
          <regex>^([ ]{3}M .+)$</regex>
      </keywords>

      <keywords id="Deleted" color="#a61a1a" useforautocomplete="no">
          <regex>^([ ]{3}D .+)$</regex>
      </keywords>

      <keywords id="-----------------" color="#666" font-weight="bold" useforautocomplete="no">
          <regex>^([-]{3,})</regex>
      </keywords>

      <keywords id="@@" color="#8f6d00" inverted-color="#c09100" font-weight="bold" useforautocomplete="no">
          <regex>^([@]{2}[^@\n\r]+[@]{2})</regex>
      </keywords>

                    
    </default>
  </states>
</syntax>