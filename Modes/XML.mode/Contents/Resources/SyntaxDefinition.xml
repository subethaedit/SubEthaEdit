<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE syntax SYSTEM "syntax.dtd">

<syntax>
    <head>
        <name>XML</name>
        <!-- The definitions title -->
        <charsintokens><![CDATA[_0987654321abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ@]]></charsintokens>
        <!-- Valid Characters for Variables -->
        <folding toplevel="4"/>
    </head>
    <states>
        <default id="Base" color="#000" background-color="#fff" font-style="normal">
            <keywords id="Tags" color="#881280" font-style="italic" useforautocomplete="no">
                <regex>(&lt;[/\s]*[^/?!][-:_\w]*\s*(?:[-:_\w]+[ \t]*=[ \t]*(?:".*?"|'.*?'|[\w:]+)\s*)*[/\s]*>)</regex>
            </keywords>
            <keywords id="Attributes in Tags" color="#994500" useforautocomplete="no">
                <regex>([\w-]*)(?=[ \t]*=[^&lt;]+>)</regex>
            </keywords>
            <keywords id="Strings in Tags" type="string" color="#1A1AA6" useforautocomplete="no">
                <regex>=[ \t]*("[^"]*"|'[^']*')(?=[^&lt;]*>)</regex>
            </keywords>
            <keywords id="Entities" color="#400080" useforautocomplete="no">
                <regex>(&amp;\w{1,8};)</regex>
                <regex>(&amp;#\d+;)</regex>
                <regex>(&amp;#x\h+;)</regex>
            </keywords>
            <state id="Comment" type="comment" color="#236E25" font-style="italic">
                <begin><regex>&lt;!--</regex></begin>
                <end><regex>--></regex></end>
                <keywords id="SGML Double Dash" color="#f00" font-weight="bold" useforautocomplete="no">
                    <regex>(?&lt;!\!)(--)(?!>)</regex>
                </keywords>
				<import mode="Base" state="EmailAndURLContainerState" keywords-only="yes"/>
            </state>
            <state id="CDATA" color="#f00" font-style="italic" foldable="yes">
                <begin>
                    <regex>&lt;!\s*\[CDATA\s*\[</regex>
                </begin>
                <end>
                    <regex>\]\s*\]\s*></regex>
                </end>
            </state>
            <state id="Doctype" color="#236E25" font-style="italic" foldable="no">
                <begin>
                    <regex>&lt;!</regex>
                </begin>
                <end>
                    <regex>></regex>
                </end>
            </state>
            <state id="Escape" color="#236E25" font-style="italic" foldable="no">
                <begin>
                    <regex>&lt;\?</regex>
                </begin>
                <end>
                    <regex>\?></regex>
                </end>
            </state>
            <state id="Single Tag" foldable="no">
                <begin>
                    <regex>&lt;\s*[^/?!][-:_\w]*\s*(?:[-:_\w]+\s*=\s*(?:"[^"]*"|'[^']*'|\w+)\s*)*/\s*(?=>)</regex>
                </begin>
                <end>
                    <regex>></regex>
                </end>
                <import/>
            </state>
            <state id="Tag State" foldable="yes">
                <begin>
                    <regex>&lt;\s*(?'xmltagstatename'[^/?!][-:_\w]*)\s*(?:[-:_\w]+[ \t]*=[ \t]*(?:"[^"]*"|'[^']*'|\w+)\s*)*\s*></regex>
                </begin>
                <end>
                    <regex>&lt;\s*/\s*(?#see-insert-start-group:xmltagstatename)\s*></regex>
                </end>
                <import/>
            </state>
        </default>
    </states>
</syntax>