			</keywords>

			<keywords id="Strings in Tags" color="#1A1AA6" useforautocomplete="no">
				<regex>=("[^"&lt;&gt;#]*#?[^"&lt;&gt;#]*")(?=[^&lt;#]*&gt;)</regex><!-- can include pound signs -->
